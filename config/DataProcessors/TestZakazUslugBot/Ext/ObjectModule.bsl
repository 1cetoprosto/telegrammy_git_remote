	Пока ВыборкаДетальныеЗаписи.Следующий() Цикл
		Если ВыборкаДетальныеЗаписи.text = Сообщение.text Тогда
			РазницаВоВремени = ВыборкаДетальныеЗаписи.МоментВремени - Сообщение.МоментВремени;
